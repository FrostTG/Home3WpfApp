<Window x:Class="Home3WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home3WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0">
            <ToolBar Margin="5" Padding="5">
                <ComboBox Margin="5" Padding="5" SelectedIndex="0" Width="200" IsEditable="True" SelectionChanged="ComboBox_SelectionChanged" >
                    <TextBlock Text="Arial" />
                    <TextBlock Text="Times New Roman" />
                    <TextBlock Text="Verdana" />
                </ComboBox>
                <ComboBox Margin="5" Padding="5" SelectedIndex="1" Width="50" IsEditable="True" SelectionChanged="ComboBox_SelectionChanged_1">
                    <TextBlock Text="14"/>
                    <TextBlock Text="16"/>
                    <TextBlock Text="18"/>
                </ComboBox>
            </ToolBar>
            <ToolBar Margin="5" Padding="5">
                <Button x:Name="bold" Click="bold_Click" >
                    <Image Source="Data\bold_text.png" Height="35" Width="35"/>
                </Button>
                <Separator/>
                <Button x:Name="italic" Click="italic_Click">
                    <Image Source="Data\italic_text.png" Height="35" Width="35"/>
                </Button>
                <Separator/>
                <Button x:Name="underline" Click="underline_Click">
                    <Image Source="Data\underline_text.png" Height="35" Width="35"/>
                </Button>
                <Separator/>
            </ToolBar>
            <ToolBar Margin="5" Padding="5">
                <StackPanel VerticalAlignment="Center">
                    <RadioButton x:Name="black" Content="Черный" IsChecked="True" Click="black_Click" />
                    <RadioButton x:Name="red" Content="Красный" Click="red_Click" />
                </StackPanel>                
            </ToolBar>
        </ToolBarTray>
        <TextBox x:Name="tBox" Grid.Row="1" Margin="5" Padding="5" BorderThickness="2" FontSize="16"
                 FontFamily="Arial" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Language="ru-ru" FontWeight="Normal">            
        </TextBox>
    </Grid>
</Window>
