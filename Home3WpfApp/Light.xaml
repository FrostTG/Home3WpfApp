<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="WhiteSmoke"/>
    </Style>
    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBlock.Foreground" Value="#FF00213A"/>
        <Setter Property="TextBlock.Padding" Value="10"/>
    </Style>
    <Style x:Key="DockPanelStyle" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="DockPanel.VerticalAlignment" Value="Top"/>         
    </Style>
    <Style x:Key="ToolBarTrayStyle" BasedOn="{StaticResource TextBlockStyle}"/>    
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Button.Foreground" Value="#FF00213A" />
        <Setter Property="Button.BorderBrush" Value="#FF00213A" />
        <Setter Property="Button.Margin" Value="10" />
        <Setter Property="Button.Padding" Value="10" />
    </Style>
</ResourceDictionary>